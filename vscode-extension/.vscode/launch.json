// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"compounds": [
		{
			"type": "extensionHost",
			"name": "Run Extension",
			"configurations": ["webview-dev-server", "Extension-dev"],
			"preLaunchTask": "build-extension",
			"stopAll": true,
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			]
		}
	],
	"configurations": [
		{
			"name": "webview-dev-server",
            "type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "start:webview"],
			"console": "integratedTerminal"
		},
		{
			"name": "watch-extension",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "watch"],
			"console": "integratedTerminal"
		},
		{
			"name": "Extension-dev",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"env": {
				"ENVIRONMENT": "DEVELOPMENT",
				"DEV_SCRIPT_URL": "http://localhost:3000/bundle.js"
			}
		},
		{
			"name": "Run Extension (production build)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "run-production-build",
			"env": {
				"ENVIRONMENT": "PRODUCTION",
				"DEV_SCRIPT_URL": "http://localhost:3000/bundle.js"
			}
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
	],
}
